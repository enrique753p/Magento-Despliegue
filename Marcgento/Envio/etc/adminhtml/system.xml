<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="carries">
            <group id="envio" translate="label" type="text" sortOrder="50" showDefault="1" showInWebsite="1" showInStore="1">   
                <label>Envio</label>
                <field id="active" translate="label" type="select" sortOrder="10" showDefault="1" showInWebsite="1" showInStore="0">
                    <label>Activo</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="name" translate="label" type="text" sortOrder="20" showDefault="1" showInWebsite="1" showInStore="1">
                    <label>Nombre Metodo</label>
                </field>
                <field id="title" translate="label" type="text" sortOrder="30" showDefault="1" showInWebsite="1" showInStore="1">
                    <label>Titulo</label>
                </field>
            </group>
        </section>
    </system>
</config>